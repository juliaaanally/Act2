@{
    ViewData["Title"] = "Home";
}

<div class="section-bg text-center py-5">
    <h1 class="display-4 mb-3" style="font-family: 'Segoe UI Semibold', Tahoma, Geneva, Verdana, sans-serif; color: #cc6699;">Welcome to ReelTalk 🎬</h1>
    <p class="lead mb-5" style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; color: #663366;">Your movie hub to discover, track, and share what you love.</p>

    <div class="container">
        <div class="row mb-5">
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title" style="color:#cc6699;">Recently Seen</h5>
                        <p class="card-text">Keep track of movies you've watched recently and never lose your history.</p>
                        <a href="/Home/RecentlySeen" class="btn btn-pink">View Recently Seen</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title" style="color:#cc6699;">Popular Picks</h5>
                        <p class="card-text">Stay updated to what's popular!</p>
                        <a href="/Home/PopularPicks" class="btn btn-pink">See Popular Picks</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title" style="color:#cc6699;">Lists</h5>
                        <p class="card-text">Find lists that match your vibe.</p>
                        <a href="/Home/Lists" class="btn btn-pink">Browse Lists</a>
                    </div>
                </div>
            </div>
        </div>

        <div>
            <h3 style="color:#996699;">Why use ReelTalk?</h3>
            <p style="font-size: 18px;">🎥 Track your watched movies with ease. 🌟 Discover new recommendations. 💬 Share your thoughts with friends.</p>
        </div>
    </div>
</div>
